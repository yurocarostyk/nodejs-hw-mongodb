    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer"
        }
      },
      "schemas": {
        "contact": {
          "type": "object",
          "required": [
            "_id",
            "userId",
            "name",
            "phoneNumber"
          ],
          "properties": {
            "_id": {
              "description": "Contact's id",
              "type": "string",
              "example": "65e4decdd286b30065d54af9"
            },
            "userId": {
              "description": "User's id that created the contact",
              "type": "string",
              "example": "65e4decdd286b30065d54af9"
            },
            "name": {
              "description": "Contact's name",
              "type": "string",
              "example": "John Doe"
            },
            "phoneNumber": {
              "description": "Contact's phone number",
              "type": "string",
              "example": 380632142112
            },
            "email": {
              "description": "Contact's email",
              "type": "string",
              "example": "test@gmail.com"
            },
            "isFavourite": {
              "description": "Whether the contact is added to favourites",
              "type": "boolean",
              "example": true
            },
            "contactType": {
              "description": "Type of contact number",
              "type": "string",
              "enum": [
                "work",
                "home",
                "personal"
              ]
            },
            "photo": {
              "description": "Contact's photo URL",
              "type": "string",
              "example": "https://res.cloudinary.com/uqwgdu/image/upload/image.png"
            }
          }
        },
        "user": {
          "type": "object",
          "required": [
            "_id",
            "name",
            "email",
            "password"
          ],
          "properties": {
            "_id": {
              "description": "Users's id",
              "type": "string",
              "example": "65e4decdd286b30065d54af9"
            },
            "name": {
              "description": "User's name",
              "type": "string",
              "example": "John Doe"
            },
            "email": {
              "description": "User's email address",
              "type": "string",
              "example": "test@email.com"
            },
            "password": {
              "description": "User's password",
              "type": "string",
              "example": "password123"
            }
          }
        }
      },
      "responses": {
        "401": {
          "description": "Unauthorized error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status",
                  "message",
                  "data"
                ],
                "properties": {
                  "status": {
                    "type": "integer",
                    "example": 401
                  },
                  "message": {
                    "type": "string",
                    "example": "UnauthorizedError"
                  },
                  "data": {
                    "type": "object",
                    "required": [
                      "message"
                    ],
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Access token expired"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "404": {
          "description": "Not found error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "status",
                  "message"
                ],
                "properties": {
                  "status": {
                    "type": "integer",
                    "example": 404
                  },
                  "message": {
                    "type": "string",
                    "example": "Not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }